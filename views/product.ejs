<!DOCTYPE html>
<html>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/catalog.js"></script>
<%- include ./base.ejs %>
<body>

  <!--title section:-->
      <div class="c-tile--title u-text-center u-margin-top-large u-margin-bottom-small">
        <h1 class="c-heading-alpha"><%= doc.productName %></h1></div>
  <!-- end title section-->

<div class = "o-layout--flush"]>
<div class ="o-layout__item u-width-1@x-small u-width-1/1@small u-width-1/3@large u-width-1/4@x-large">
  <article class="c-tile  c-tile--square  c-tile--full  no-anim  in-view">
    <a class="c-tile__link" href="#">
      <div class="c-tile__content">
        <div class="c-tile__media">
          <img alt="<%= doc.productName %>" class="c-tile__poster" src="<%= doc.productImage %>" />
        </div>
      </div>
    </a>
  </article>
</div>
</div>



  <div class ="o-layout__item u-width-1@x-small u-width-1/2@small u-width-1/3@large u-width-1/4@x-large">
    <p>&pound;<%= doc.productPrice %></p>
    <p>Stock level: <%= doc.productStockLevel %></p>
    <p><%= doc.productDescription %></p>
<!--button-->
    <div class="panel-buttons o-layout o-layout--narrow">
    <div class="o-layout__item u-width-1/1 u-width-1/2@legacy-medium">
    <a href="/add-to-cart/<%= doc._id%>" class="c-btn c-btn--secondary panel-hub-btn u-margin-bottom-small">Add to basket</a>
    </div></div>
<!--button-->
  </div>



</body>
</html>
